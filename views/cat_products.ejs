<% include _layouts/header %>


   <div id="cat_products">
    <div class="row products"  id="container_cat cat-pro">
    
        <% products.forEach(function(p){ %>
               <div class="col-10 col-xs-6  col-md-4 col-lg-3 my-3"  id="container_catproducts">
                   <div class="card load" id="load">


                       <div class="img-container">
                        <p class="dis"style="font-weight: bold; font-family: 'Oswald';">Discout: Ksh<%= p.discount %></p>
                       <a class="pa"  href="/products/<%= p.category %>/<%= p.slug %>">
                            <img class="card-img-top img-responsive"src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
                        </a>
                       </div>


                       <div class="card-footer d-flex justify-content-between">
                        <h6 style="font-weight: bold; font-family: 'Oswald';"><%= p.title %></h6>
                       </div>
                       

                       <div>
                        <h4 style="font-family: 'Roboto Slab';">Ksh <%= p.price %></h4>
                        <h5 style="font-family: 'Roboto Slab';"><strike class="strike">Ksh <%= p.price_off %></Ksh></strike></h5>
                        </div>
                   </div>
               </div>
            <% }); %>
        
    </div>
   </div>

   



<% include _layouts/footer %>