<%- include('../_layouts/adminheader') %>

<h2 class="page-title">Entertainment instruments</h2>
<a href="/admin/entertain/add-entertain" class="btn btn-primary">Add a new Entertainment instrument</a>
<br><br>

<% if (count > 0) { %>

<table class="table table-striped alignmiddle">

    <thead>
        <tr class="home">
            <th>Product</th>
            <th>Price</th>
            <th>Price_off</th>
            <th>Discount</th>
            <th>Category</th>
            <th>Seller</th>
            <th>Product Image</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% entertain.forEach(function(product){ %>
        <tr>
            <td><%= product.title %></td>
            <td>Ksh <%= product.price %></td>
            <td>Ksh <%= product.price_off %></td>
            <td>Ksh <%= product.discount %></td>
            <td><%= product.category %></td>
            <td><%= product.seller %></td>
            <td>
                <% if (product.image == "") { %>
                <img id="noimage" src="/images/noimage.png">
                <% } else {%>
                <img id="noimage" src="/product_images/<%= product._id %>/<%= product.image %>">
                <% }%>
            </td>
            <td><a href="/admin/entertain/edit-entertain/<%= product._id %>">Edit</a></td>
            <td><a class="confirmDeletion" href="/admin/entertain/delete-entertain/<%= product._id %>">Delete</a></td>
        </tr>
        <% }); %>
    </tbody>
</table>

<% } else {%>
<h3 class="text-center">There are no Entertainment instruments</h3>
<% }%>

<%- include('../_layouts/adminfooter') %>