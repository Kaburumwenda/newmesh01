<% include _layouts/header %>

<div class="row products">
    
    <% products.forEach(function(p){ %>
            <div class="col-xs-6 col-md-4 col-lg-2 p">
                <p class="discount"style="font-weight: bold; font-family: 'Oswald';">Discout of Ksh <%= p.discount %></p>
                <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
                    <img class="pimage img-responsive" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
                </a>
                <h5 style="font-weight: bold; font-family: 'Oswald';"><%= p.title %></h5>
                <h4>Ksh <%= parseFloat(p.price).toFixed(2) %></h4>
                <h5 style="font-family: 'Roboto Slab';"><strike class="strike">Ksh <%= parseFloat(p.price_off).toFixed(2) %></Ksh></strike></h5>
                <a class="vd" href="/products/<%= p.category %>/<%= p.slug %>"><button class="btn btn-block Details-button">View Details</button></a>
            </div>
        <% }); %>
    
</div>

<% include _layouts/footer %>