<% include _layouts/header %>
<br>
<div class="register">

    <div>
        <img src="/assests/reg2.png"/>
    </div>

    <h1><%= title %></h1>

<form method="post" action="/users/register">

    <div class="form-group">
        <label>Firstname</label>
        <input type="text" name="firstname" class="form-control" placeholder="firstname">
    </div>

    <div class="form-group">
        <label>lastname</label>
        <input type="text" name="lastname" class="form-control" placeholder="lastname">
    </div>

    <div class="form-group">
        <label>Email</label>
        <input type="text" name="email" class="form-control" placeholder="Email">
    </div>
    
    <div class="form-group">
        <label>Username</label>
        <input type="text" name="username" class="form-control" placeholder="Username">
    </div>
       
    <div class="form-group">
        <label>Phone Number</label>
        <input type="text" name="phone" class="form-control" placeholder="phone number...+254">
    </div>

    <div class="form-group">
        <label>Password</label>
        <input id="password-field" type="password" class="form-control" name="password" placeholder="Secret Password">
        <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
    </div>
    
    <div class="form-group">
        <label>Confirm Password</label>
        <input id="password-field" type="password" class="form-control" name="password2" placeholder="Confirm Password">
        <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
    </div>
    <br>
    <button type="submit" class="btn btn-default btn-success">Register</button>
</form>
<br>
<div>
    <p>Already have an Account:</p>
    <p><a href="/users/login"><button class="btn btn-default btn-info">Login</button></a></p>
</div>
</div>

<script>
    $(".toggle-password").click(function() {

$(this).toggleClass("fa-eye fa-eye-slash");
var input = $($(this).attr("toggle"));
if (input.attr("type") == "password") {
  input.attr("type", "text");
} else {
  input.attr("type", "password");
}
});
</script>

