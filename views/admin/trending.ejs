<%- include('../_layouts/adminheader') %>

<h2 class="page-title">Trending Products</h2>
<a href="/admin/trending/add-trending" class="btn btn-primary">Add a new trending product</a>
<br><br>

<% if (count > 0) { %>

<table class="table table-striped alignmiddle">

    <thead>
        <tr class="home">
            <th>Product</th>
            <th>Price</th>
            <th>Price_off</th>
            <th>Discount</th>
            <th>Category</th>
            <th>Product Image</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach(function(product){ %>
        <tr>
            <td><%= product.title %></td>
            <td>Ksh <%= parseFloat(product.price).toFixed(2) %></td>
            <td>Ksh <%= parseFloat(product.price_off).toFixed(2) %></td>
            <td>Ksh <%= parseFloat(product.discount).toFixed(2) %></td>
            <td><%= product.category %></td>
            <td>
                <% if (product.image == "") { %>
                <img id="noimage" src="/images/noimage.png">
                <% } else {%>
                <img id="noimage" src="/product_images/<%= product._id %>/<%= product.image %>">
                <% }%>
            </td>
            <td><a href="/admin/trending/edit-trending/<%= product._id %>">Edit</a></td>
            <td><a class="confirmDeletion" href="/admin/trending/delete-trending/<%= product._id %>">Delete</a></td>
        </tr>
        <% }); %>
    </tbody>
</table>

<% } else {%>
<h3 class="text-center">There are no treding products.</h3>
<% }%>

<%- include('../_layouts/adminfooter') %>